<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:id="@+id/listviewAlternativeRoute"
        android:layout_gravity="left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rebook_now"
        android:id="@+id/buttonRebookingConfirm"
        android:layout_alignTop="@+id/buttonMaybeLater"
        android:layout_toLeftOf="@+id/buttonMaybeLater"
        android:layout_toStartOf="@+id/buttonMaybeLater" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advanced_search"
        android:id="@+id/buttonAdvancedSearch"
        android:layout_alignTop="@+id/buttonOtherAirlines"
        android:layout_toLeftOf="@+id/buttonOtherAirlines"
        android:layout_toStartOf="@+id/buttonOtherAirlines"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/other_airlines2"
        android:id="@+id/buttonOtherAirlines"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/alternative_options"
        android:id="@+id/textAlternativeOptionsMode"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/alternative_routes"
        android:id="@+id/textAlternativeRoutes"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!-- Align to left&bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WantsMore?"
        android:id="@+id/textWantsMore"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maybe_later"
        android:id="@+id/buttonMaybeLater"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="20dp"
         />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAlternativeRoutes"
        android:layout_alignTop="@+id/buttonRebookingConfirm"
        android:layout_toRightOf="@+id/textAlternativeRoutes"
        android:layout_toLeftOf="@+id/buttonRebookingConfirm"
        android:layout_toStartOf="@+id/buttonRebookingConfirm"
        android:spinnerMode="dropdown" />


</RelativeLayout>