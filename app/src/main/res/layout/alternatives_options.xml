<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="743dp"
        android:id="@+id/listviewAlternativeRoute"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RebookingConfirm"
        android:id="@+id/buttonRebookingConfirm"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Search"
        android:id="@+id/buttonAdvancedSearch"
        android:layout_alignTop="@+id/buttonRebookingConfirm"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MultipleAirlines"
        android:id="@+id/buttonMultipleAirlines"
        android:layout_alignTop="@+id/buttonAdvancedSearch"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />


</RelativeLayout>