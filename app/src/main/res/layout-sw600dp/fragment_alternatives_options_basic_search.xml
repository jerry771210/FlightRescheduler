<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:id="@+id/listviewAlternativeRoute"
        android:layout_gravity="left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Search"
        android:id="@+id/buttonAdvancedSearch"
        android:layout_alignTop="@+id/textWantsMore"
        android:layout_toRightOf="@+id/textAlternativeOptionsMode"
        android:layout_toEndOf="@+id/textAlternativeOptionsMode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Airlines"
        android:id="@+id/buttonOtherAirlines"
        android:layout_alignTop="@+id/buttonAdvancedSearch"
        android:layout_toRightOf="@+id/buttonAdvancedSearch"
        android:layout_toEndOf="@+id/buttonAdvancedSearch"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alternative Options:"
        android:id="@+id/textAlternativeOptionsMode"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
         />


    <!-- Align to left&bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Want more?"
        android:id="@+id/textWantsMore"
        android:layout_below="@+id/listviewAlternativeRoute"
        android:layout_alignLeft="@+id/textAlternativeOptionsMode"
        android:layout_alignStart="@+id/textAlternativeOptionsMode"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maybe Later"
        android:id="@+id/buttonMaybeLater"
        android:layout_below="@+id/buttonAdvancedSearch"
        android:layout_alignLeft="@+id/textWantsMore"
        android:layout_alignStart="@+id/textWantsMore" />


</RelativeLayout>